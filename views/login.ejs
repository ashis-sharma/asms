<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Login</h1>
      <% include ./partials/messages %>
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email">Username</label>
          <input
            type="email"
            id="username"
            name="email"
            class="form-control"
            placeholder="Enter Username"
          />
          <small 
          id="phoneHelp" 
          class="form-text text-muted">Use email as your username.</small>
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
          />
        </div>
        <div class="form-group" id="captcha">
        <img class="rounded mx-auto d-block" src="/captcha"/>
        <br>
        <input type="text" name="captcha" class="form-control"/>
        <br>
        <div class="text-center"> 
        <button type="submit" class="btn btn-primary center-block">Login</button>
      </form>
      <div>
        <p class="lead mt-4">
          Not Having an Account? Click 
          <a href="/users/registration">Register</a>
        </p>
        <p class="lead mt-4">
          Have you messed up your password ? Click <a href="/users/forgotpassword">Forgot Password</a>
          </p>
      </div>
    </div>
  </div>
</div>